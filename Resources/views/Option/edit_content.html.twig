{% trans_default_domain 'ir_product' %}

<div class="page-header">
    <h1>{{ 'option.edit.title'|trans }}</h1>
</div>

<form action="{{ path('ir_product_option_edit', {'id': option.id} ) }}" {{ form_enctype(form) }} method="POST">
    {% include 'IRProductBundle:Option:form.html.twig' %}
    <div class="form-actions">
        <input type="submit" value="{{ 'option.edit.save'|trans }}" class="btn btn-large btn-primary" />
       &nbsp;
       <a href="{{ path('ir_product_option_list') }}" class="btn btn-large">{{ 'option.edit.cancel'|trans }}</a>         
    </div> 
</form>