{% trans_default_domain 'ir_product' %}

<div class="page-header">
    <h1>{{ 'option.edit.title'|trans }}</h1>
</div>

<form action="{{ path('ir_product_option_edit', {'id': option.id}) }}" {{ form_enctype(form) }} method="POST" novalidate>
    {% include 'IRProductBundle:Option:form.html.twig' %}
    <div>
        <button type="submit" class="btn btn-primary">{{ 'option.edit.save'|trans }}</button>
        <a href="{{ app.request.headers.get('referer') }}" class="btn">{{ 'option.edit.cancel'|trans }}</a>         
    </div>         
</form>