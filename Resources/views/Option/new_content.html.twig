{% trans_default_domain 'ir_product' %}

<div class="page-header">
    <h1>{{ 'option.new.title'|trans }}</h1>
</div>

<form action="{{ path('ir_product_option_new') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal" novalidate>
    {% include 'IRProductBundle:Option:form.html.twig' %}
    <div>
        <button type="submit" class="btn btn-primary">{{ 'option.new.save'|trans }}</button>
        <a href="{{ path('ir_product_option_list') }}" class="btn">{{ 'option.new.cancel'|trans }}</a>        
    </div> 
</form>