{% trans_default_domain 'ir_product' %}

<div class="page-header">
    <h1>{{ 'admin.product.list.title'|trans }}</h1>
</div>

<div class="well well-sm">
    <a href="{{ path('ir_product_admin_product_new') }}" class="btn btn-primary">
        <i class="glyphicon glyphicon-plus"></i> {{ 'admin.product.action.new'|trans }}
    </a>
</div>  

{% if products|length %}
<table class="table table-striped">      
    <thead>
        <tr>
            <th>{{ 'admin.product.name'|trans }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for product in products %}
        <tr>
            <td>{{ product.name }}</td>
            <td>
                <div class="pull-right">
                    <a href="{{ path('ir_product_admin_product_show', {'id': product.id}) }}" class="btn btn-default">
                        <i class="glyphicon glyphicon-list"></i>
                    </a>                     
                    <a href="{{ path('ir_product_admin_product_edit', {'id': product.id}) }}" class="btn btn-primary">
                        <i class="glyphicon glyphicon-edit"></i>
                    </a>
                    <a href="{{ path('ir_product_admin_product_delete', {'id': product.id}) }}" class="btn btn-danger">
                        <i class="glyphicon glyphicon-trash"></i>
                    </a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
<div class="well">
    {{ 'admin.product.list.no_results'|trans }}
</div>
{% endif %}