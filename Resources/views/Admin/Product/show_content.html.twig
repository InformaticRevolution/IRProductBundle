{% trans_default_domain 'ir_product' %}

<div class="page-header">
    <h1>{{ 'admin.product.show.title'|trans }}</h1>
</div>  

<div class="well well-sm">
    <a href="{{ path('ir_product_admin_product_edit', {'id': product.id}) }}" class="btn btn-primary">
        <i class="glyphicon glyphicon-edit"></i> {{ 'admin.product.action.edit'|trans }}
    </a>
    <a href="{{ path('ir_product_admin_product_delete', {'id': product.id}) }}" class="btn btn-danger">
        <i class="glyphicon glyphicon-trash"></i> {{ 'admin.product.action.delete'|trans }}
    </a>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        {{ 'admin.product.show.general_info'|trans }}
    </div>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <td>{{ 'admin.product.name'|trans }}</td>
                <td>{{ product.name }}</td>        
            </tr>  
            <tr>
                <td>{{ 'admin.product.created_at'|trans }}</td>
                <td>{{ product.createdAt|date }}</td>
            </tr>  
            <tr>
                <td>{{ 'admin.product.updated_at'|trans }}</td>
                <td>{{ product.updatedAt|date }}</td>
            </tr>          
        </tbody>
    </table>
</div>