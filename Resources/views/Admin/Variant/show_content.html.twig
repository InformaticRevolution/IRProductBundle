{% trans_default_domain 'ir_product' %}

<div class="page-header">
    <h1>{{ 'admin.variant.show.title'|trans }}</h1>
</div>  

<div class="well well-sm">
    <a href="{{ path('ir_product_admin_variant_edit', {'id': variant.id}) }}" class="btn btn-primary">
        <i class="glyphicon glyphicon-edit"></i> {{ 'admin.variant.action.edit'|trans }}
    </a>
    <a href="{{ path('ir_product_admin_variant_delete', {'id': variant.id}) }}" class="btn btn-danger">
        <i class="glyphicon glyphicon-trash"></i> {{ 'admin.variant.action.delete'|trans }}
    </a>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        {{ 'admin.variant.show.general_info'|trans }}
    </div>

    <table class="table table-bordered">
        <tbody>
            {% for option in variant.product.options %}
            <tr>
                <td>{{ option.option }}</td>
                <td>{{ variant.options[loop.index0] }}</td>        
            </tr>  
            {% endfor %}
            <tr>
                <td>{{ 'admin.variant.created_at'|trans }}</td>
                <td>{{ variant.createdAt|date }}</td>
            </tr>  
            <tr>
                <td>{{ 'admin.variant.updated_at'|trans }}</td>
                <td>{{ variant.updatedAt|date }}</td>
            </tr>          
        </tbody>
    </table>
</div>