{% trans_default_domain 'ir_product' %}

<div class="page-header">
    <h1>{{ 'product.list.title'|trans }}</h1>
</div>

<div class="panel panel-default">
    <div class="panel-body">
        <a href="{{ path('ir_product_new') }}" class="btn btn-primary">
            <i class="glyphicon glyphicon-plus"></i> {{ 'product.action.new'|trans }}
        </a>
    </div>
</div>  

{% if products|length %}
<table class="table table-striped">      
    <thead>
        <tr>
            <th>{{ 'product.name'|trans }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    {% for product in products %}
        <tr>
            <td>{{ product.name }}</td>
            <td>
                <div class="pull-right">
                    <a href="{{ path('ir_product_edit', {'id': product.id}) }}" class="btn btn-primary">
                        <i class="glyphicon glyphicon-edit"></i>
                    </a>
                    <a href="{{ path('ir_product_delete', {'id': product.id}) }}" class="btn btn-danger">
                        <i class="glyphicon glyphicon-trash"></i>
                    </a>
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
<div class="well">
    {{ 'product.list.no_results'|trans }}
</div>
{% endif %}