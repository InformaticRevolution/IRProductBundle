{% trans_default_domain 'ir_product' %}

<div class="page-header">
    <h1>{{ 'variant.new.title'|trans }}</h1>
</div>

<form action="{{ path('ir_product_variant_new', {'productId': product.id} ) }}" {{ form_enctype(form) }} method="POST">
    {% include 'IRProductBundle:Variant:form.html.twig' %}
    <div class="form-actions">
        <input type="submit" value="{{ 'variant.new.save'|trans }}" class="btn btn-large btn-primary" />
       &nbsp;
       <a href="{{ path('ir_product_edit', {'id': product.id} ) }}" class="btn btn-large">{{ 'variant.new.cancel'|trans }}</a>         
    </div> 
</form>