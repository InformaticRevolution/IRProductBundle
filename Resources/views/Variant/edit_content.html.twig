{% trans_default_domain 'ir_product' %}

<div class="page-header">
    <h1>{{ 'variant.edit.title'|trans }}</h1>
</div>

<form action="{{ path('ir_product_variant_edit', {'id': variant.id}) }}" {{ form_enctype(form) }} method="POST" class="form-horizontal" novalidate>
    {% include 'IRProductBundle:Variant:form.html.twig' %}
    <div>
        <button type="submit" class="btn btn-primary">{{ 'variant.edit.save'|trans }}</button>
        <a href="{{ path('ir_product_show', {'id' : variant.product.id}) }}" class="btn">{{ 'variant.edit.cancel'|trans }}</a>         
    </div>        
</form>