<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="IR\Bundle\ProductBundle\Model\VariableProduct">
        <one-to-one field="masterVariant" target-entity="IR\Bundle\ProductBundle\Model\VariantInterface">
            <join-column name="master_variant_id" referenced-column-name="id" orphan-removal="true" on-delete="SET NULL" />
            <cascade>
                <cascade-all />
            </cascade>            
        </one-to-one>        
    </mapped-superclass>
    
</doctrine-mapping>