<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="IR\Bundle\ProductBundle\Model\Variant" repository-class="IR\Bundle\ProductBundle\Doctrine\VariantRepository">
                        
        <field name="master" column="master" type="boolean" />
                
        <field name="createdAt" column="created_at" type="datetime">
            <gedmo:timestampable on="create"/>
        </field>
        
        <field name="updatedAt" column="updated_at" type="datetime" nullable="true">
            <gedmo:timestampable on="update"/>
        </field>
        
        <many-to-one field="product" target-entity="IR\Bundle\ProductBundle\Model\ProductInterface" inversed-by="variants">
            <join-column name="product_id" referenced-column-name="id" nullable="false" on-delete="cascade" />
        </many-to-one>          
    </mapped-superclass>
    
</doctrine-mapping>