<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing 
                            http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="ir_product_variant_show" pattern="/{id}" methods="GET">
        <default key="_controller">IRProductBundle:Variant:show</default>
    </route>    
    
    <route id="ir_product_variant_new" pattern="/new/{productId}">
        <default key="_controller">IRProductBundle:Variant:new</default>
    </route>  
    
    <route id="ir_product_variant_edit" pattern="/{id}/edit">
        <default key="_controller">IRProductBundle:Variant:edit</default>
    </route>    
    
    <route id="ir_product_variant_delete" pattern="/{id}/delete" methods="GET">
        <default key="_controller">IRProductBundle:Variant:delete</default>
    </route>        
</routes>